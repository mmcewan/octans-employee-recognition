<h1>Admin Page</h1>

<form method="post">
	<input type="submit" name="add-new" value="Add New Account">
	<input type="submit" name="users" value="Manage Users">
	<input type="submit" name="admins" value="Manage Admins">
	<!--<input type="submit" name="reports" value="Business Intelligence Reports">-->
</form>

<div class="inner">
	{{#if message}}
		<h4>{{ message }}</h4>
	{{/if}}
</div>

{{#if user}}
<table>
	<tr>
		<th>Username</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Creation Time</th>
	</tr>
	{{#each user}}
		<td>{{this.username}}</td>
		<td>{{this.firstname}}</td>
		<td>{{this.lastname}}</td>
		<td>{{this.timestamp}}</td>
		<form method="post"><td>
			<input type="submit" name="edit" value="Edit">
			<input type="hidden" name="id" value="{{this.id}}">
			<input type="hidden" name="admin_flag" value="{{this.admin_flag}}">
		</td></form>
		<form method="post"><td>
			<input type="submit" name="delete" value="Delete">
			<input type="hidden" name="id" value="{{this.id}}">
			<input type="hidden" name="admin_flag" value="{{this.admin_flag}}">
		</td></form>
	</tr>
	{{/each}}
</table>
{{/if}}

