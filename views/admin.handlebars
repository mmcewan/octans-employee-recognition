<h1 id="title">Admin Page</h1>

<form method="post">
	<input type="submit" name="add-new" value="Add New Account">
	<input type="submit" name="accounts" value="Manage Accounts">
	<input type="submit" name="reports" value="Reports">
</form>

<div class="inside">
	{{#if message}}
		<hr/>
		<h4>{{ message }}</h4>
	{{/if}}
</div>

{{#if report}}
	{{#each report}}
		<hr/>
		<div class="inside">
			<h3>Statistics</h3>
			<button type="button" class="report_btn" disabled>{{this.num_users}} users</button>
			<button type="button" class="report_btn" disabled>{{this.num_awards}} awards</button><br/><br/>
			
			<h3>Charts</h3>
			<a href="/report1" class="button" target="_blank">Types of Awards Created</a>
		</div>
	{{/each}}
{{/if}}

{{#if account}}
<table>
	<tr>
		<th>Username</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email Address</th>
		<th>Admin</th>
		<th>Creation Time</th>
		<form method="post">
		<th><select class="selectpicker" data-style="btn-info" name="selectpicker">
				<option value="">Sort By</option>
				<option value="username">Username</option>
				<option value="firstname">First Name</option>
				<option value="lastname">Last Name</option>
				<option value="email_address">Email Address</option>
				<option value="admin_flag">Admin Type</option>
				<option value="creation_time">Creation Time</option>
			</select></th>
			<th><input type="submit" name="sortby" value="Go">
		</form></th>
	</tr>
	{{#each account}}
		<td>{{this.username}}</td>
		<td>{{this.firstname}}</td>
		<td>{{this.lastname}}</td>
		<td>{{this.email}}</td>
		<td>{{this.admin_flag}}</td>
		<td>{{this.timestamp}}</td>
		<form method="post"><td>
			<input type="submit" name="edit" value="Edit">
			<input type="hidden" name="id" value="{{this.id}}">
		</td></form>
		<form method="post"><td>
			<input type="submit" name="delete" value="Delete">
			<input type="hidden" name="id" value="{{this.id}}">
		</td></form>
	</tr>
	{{/each}}
</table>
{{/if}}