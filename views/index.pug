html
	head
		title Report
		script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js")
		
	body
		canvas(id="myChart" width="200" height="80")

		script. 
			window.onload = function() {
			var edu="#{num_edu}", inno="#{num_inno}", ins="#{num_ins}", team="#{num_team}", ty="#{num_ty}";
			var ctx = document.getElementById("myChart").getContext('2d');
			   var chart = new Chart(ctx,  {
					type: 'bar',
					data: {
						labels: ["Educational", "Innovative", "Inspiring", "Teamwork", "Thank you"],
						datasets: [{
							label: 'Number of Awards',
							backgroundColor: 'rgb(255, 99, 132)',
							borderColor: 'rgb(255, 99, 132)',
							data: [edu, inno, ins, team, ty],
						}],
					},
					options: {
						title: { 
							display: true,
							text: "Types of Awards Created",
						},
						legend: {
							position: 'bottom'
						},
						scales: {
							yAxes: [{
								ticks:  {
									beginAtZero: true
								}
							}]
						},
					}
				});
			};